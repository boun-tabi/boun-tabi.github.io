---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import { marked } from 'marked';

// Get all projects
const projects = await getCollection('projects');

// Sort projects by order
projects.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));

// Group projects by status
const activeProjects = projects.filter(project => project.data.status === 'active');
const completedProjects = projects.filter(project => project.data.status === 'completed');

// Function to render markdown
function renderMarkdown(content) {
  return marked.parse(content);
}
---

<MainLayout title="Projects - TABILAB">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-primary mb-12 text-center">Research Projects</h1>
    
    <!-- Active Projects -->
    {activeProjects.length > 0 && (
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-primary-dark mb-8 border-b pb-2">Active Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {activeProjects.map(project => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="relative h-48 overflow-hidden">
                {project.data.image ? (
                  <img 
                    src={project.data.image} 
                    alt={project.data.title}
                    class="w-full h-full object-cover"
                    onerror="this.src='/images/placeholder.jpg'; this.onerror=null;"
                  />
                ) : (
                  <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-400">No image available</span>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-semibold text-primary mb-2">
                  <a href={`/projects/${project.slug}`} class="hover:underline">
                    {project.data.title}
                  </a>
                </h3>
                <p class="text-gray-700 mb-4">{project.data.description}</p>
                
                <div class="flex justify-between items-center">
                  <span class="inline-block px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">
                    Active
                  </span>
                  <a 
                    href={`/projects/${project.slug}`}
                    class="text-primary-light hover:underline"
                  >
                    Learn more →
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
    
    <!-- Completed Projects -->
    {completedProjects.length > 0 && (
      <div>
        <h2 class="text-2xl font-bold text-primary-dark mb-8 border-b pb-2">Completed Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {completedProjects.map(project => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="relative h-48 overflow-hidden">
                {project.data.image ? (
                  <img 
                    src={project.data.image} 
                    alt={project.data.title}
                    class="w-full h-full object-cover"
                    onerror="this.src='/images/placeholder.jpg'; this.onerror=null;"
                  />
                ) : (
                  <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-400">No image available</span>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-semibold text-primary mb-2">
                  <a href={`/projects/${project.slug}`} class="hover:underline">
                    {project.data.title}
                  </a>
                </h3>
                <p class="text-gray-700 mb-4">{project.data.description}</p>
                
                <div class="flex justify-between items-center">
                  <span class="inline-block px-3 py-1 bg-gray-100 text-gray-800 rounded-full text-sm">
                    Completed
                  </span>
                  <a 
                    href={`/projects/${project.slug}`}
                    class="text-primary-light hover:underline"
                  >
                    Learn more →
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</MainLayout> 