---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import { marked } from 'marked';

// Get all theses and sort by year (descending)
const theses = await getCollection('theses');
theses.sort((a, b) => b.data.year - a.data.year);

// Group theses by type
const thesesByType = theses.reduce((acc, thesis) => {
  const type = thesis.data.type;
  if (!acc[type]) {
    acc[type] = [];
  }
  acc[type].push(thesis);
  return acc;
}, {});

// Define type labels
const typeLabels = {
  'phd': 'PhD Theses',
  'masters': 'Master\'s Theses',
  'bachelors': 'Bachelor\'s Theses'
};

// Function to render markdown
function renderMarkdown(content) {
  return marked.parse(content);
}
---

<MainLayout title="Theses - TABILAB">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-primary mb-12 text-center">Theses</h1>
    
    {Object.keys(thesesByType).map(type => (
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-primary-dark mb-6 border-b pb-2">{typeLabels[type]}</h2>
        <div class="space-y-8">
          {thesesByType[type].map(thesis => (
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-xl font-semibold text-primary mb-2">
                <a href={`/theses/${thesis.slug}`} class="hover:underline">
                  {thesis.data.title}
                </a>
              </h3>
              <p class="text-gray-700 mb-2">Author: {thesis.data.author}</p>
              <p class="text-gray-600 mb-2">Supervisor: {thesis.data.supervisor}</p>
              <p class="text-gray-600 italic mb-4">Year: {thesis.data.year}</p>
              
              <div class="mb-4">
                <p class="text-gray-700">{thesis.data.abstract}</p>
              </div>
              
              <div class="flex flex-wrap gap-4">
                {thesis.data.pdf && (
                  <a 
                    href={thesis.data.pdf} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center text-primary-light hover:underline"
                  >
                    <span>PDF</span>
                  </a>
                )}
                
                <a 
                  href={`/theses/${thesis.slug}`}
                  class="inline-flex items-center text-primary-light hover:underline"
                >
                  <span>Read More</span>
                </a>
              </div>
              
              {thesis.data.tags && thesis.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-4">
                  {thesis.data.tags.map(tag => (
                    <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</MainLayout>