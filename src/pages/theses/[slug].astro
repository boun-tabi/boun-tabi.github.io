---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import { marked } from 'marked';

// Get the slug from the URL
export async function getStaticPaths() {
  const theses = await getCollection('theses');
  return theses.map(thesis => ({
    params: { slug: thesis.slug },
    props: { thesis },
  }));
}

const { thesis } = Astro.props;
const { Content } = await thesis.render();

// Function to render markdown
function renderMarkdown(content) {
  return marked.parse(content);
}

// Define thesis type labels
const thesisTypeLabels = {
  'phd': 'PhD Thesis',
  'masters': 'Master\'s Thesis',
  'bachelors': 'Bachelor\'s Thesis',
};
---

<MainLayout title={`${thesis.data.title} - TABILAB Theses`}>
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <a href="/theses" class="text-primary-light hover:underline inline-flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Back to All Theses
        </a>
      </div>

      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-8">
          <div class="flex flex-wrap justify-between items-start mb-6">
            <h1 class="text-3xl font-bold text-primary mb-2 flex-grow">{thesis.data.title}</h1>
            <span class="bg-primary text-white px-3 py-1 rounded-md text-sm">
              {thesisTypeLabels[thesis.data.type] || thesis.data.type}
            </span>
          </div>

          <div class="mb-8">
            <p class="text-gray-600 mb-1"><span class="font-semibold">Author:</span> {thesis.data.author}</p>
            <p class="text-gray-600 mb-1"><span class="font-semibold">Supervisor:</span> {thesis.data.supervisor}</p>
            <p class="text-gray-600 mb-1"><span class="font-semibold">Year:</span> {thesis.data.year}</p>
            
            {thesis.data.tags && thesis.data.tags.length > 0 && (
              <div class="mt-3">
                <span class="font-semibold text-gray-600">Tags:</span>
                <div class="flex flex-wrap gap-2 mt-1">
                  {thesis.data.tags.map(tag => (
                    <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>

          {thesis.data.abstract && (
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-primary mb-3">Abstract</h2>
              <div class="prose max-w-none" set:html={renderMarkdown(thesis.data.abstract)} />
            </div>
          )}

          <div class="prose max-w-none mb-8">
            <Content />
          </div>

          {thesis.data.pdf && (
            <div class="mt-8">
              <a 
                href={thesis.data.pdf} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center bg-primary text-white px-4 py-2 rounded-md hover:bg-primary-dark transition-colors"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd" />
                </svg>
                Download PDF
              </a>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</MainLayout> 