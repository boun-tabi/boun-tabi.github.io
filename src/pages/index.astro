---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import { format } from 'date-fns';

// Get featured papers
const papers = await getCollection('papers', (paper) => paper.data.featured === true);
papers.sort((a, b) => b.data.year - a.data.year);
const featuredPapers = papers.slice(0, 3);

// Get featured projects
const projects = await getCollection('projects', (project) => project.data.featured === true);
projects.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));
const featuredProjects = projects.slice(0, 3);

// Get latest news
const news = await getCollection('news');
news.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
const latestNews = news.slice(0, 3);

// Format date function
function formatDate(date) {
  return format(new Date(date), 'MMMM d, yyyy');
}
---

<MainLayout title="TABILAB - Text Analytics and BIoInformatics Lab">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-primary to-primary-dark text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl font-bold mb-6">TABILAB</h1>
        <p class="text-2xl mb-8">Text Analytics and BIoInformatics Lab</p>

        <p class="text-xl mb-12">Our research focuses on advancing Natural Language Processing (NLP), with a particular emphasis on the Turkish language. We also delve into bioinformatics and cheminformatics, exploring the language of life and the complex interactions within biological systems.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/projects" class="bg-white text-primary font-bold py-3 px-6 rounded-lg hover:bg-gray-100 transition-colors">
            Our Projects
          </a>
          <a href="/papers" class="bg-transparent border-2 border-white text-white font-bold py-3 px-6 rounded-lg hover:bg-white/10 transition-colors">
            Research Papers
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-primary mb-12 text-center">Featured Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredProjects.map(project => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-48 overflow-hidden">
              {project.data.image ? (
                <img 
                  src={project.data.image} 
                  alt={project.data.title}
                  class="w-full h-full object-cover"
                  onerror="this.src='/boun-tabi-dev/images/placeholder.jpg'"
                />
              ) : (
                <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                  <span class="text-gray-400">No image available</span>
                </div>
              )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-primary mb-2">
                <a href={`/projects/${project.slug}`} class="hover:underline">
                  {project.data.title}
                </a>
              </h3>
              <p class="text-gray-700 mb-4">{project.data.description}</p>
              <a 
                href={`/projects/${project.slug}`}
                class="text-primary-light hover:underline"
              >
                Learn more →
              </a>
            </div>
          </div>
        ))}
      </div>
      <div class="text-center mt-12">
        <a href="/projects" class="inline-block bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-primary-dark transition-colors">
          View All Projects
        </a>
      </div>
    </div>
  </section>

  <!-- Latest News -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-primary mb-12 text-center">Latest News</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {latestNews.map(item => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-48 overflow-hidden">
              {item.data.image ? (
                <img 
                  src={item.data.image} 
                  alt={item.data.title}
                  class="w-full h-full object-cover"
                  onerror="this.src='/boun-tabi-dev/images/placeholder.jpg'"
                />
              ) : (
                <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                  <span class="text-gray-400">No image available</span>
                </div>
              )}
            </div>
            <div class="p-6">
              <p class="text-gray-600 mb-2">{formatDate(item.data.date)}</p>
              <h3 class="text-xl font-semibold text-primary mb-4">
                <a href={`/news/${item.slug}`} class="hover:underline">
                  {item.data.title}
                </a>
              </h3>
              <a 
                href={`/news/${item.slug}`}
                class="text-primary-light hover:underline"
              >
                Read more →
              </a>
            </div>
          </div>
        ))}
      </div>
      <div class="text-center mt-12">
        <a href="/news" class="inline-block bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-primary-dark transition-colors">
          View All News
        </a>
      </div>
    </div>
  </section>

  <!-- Recent Publications -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-primary mb-12 text-center">Recent Publications</h2>
      <div class="max-w-4xl mx-auto space-y-8">
        {featuredPapers.map(paper => (
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-primary mb-2">
              <a href={`/papers/${paper.slug}`} class="hover:underline">
                {paper.data.title}
              </a>
            </h3>
            <p class="text-gray-700 mb-2">{paper.data.authors}</p>
            <p class="text-gray-600 italic mb-4">{paper.data.venue}</p>
            <div class="flex flex-wrap gap-4">
              {paper.data.pdf && (
                <a 
                  href={paper.data.pdf} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-primary-light hover:underline"
                >
                  <span>PDF</span>
                </a>
              )}
              {paper.data.code && (
                <a 
                  href={paper.data.code} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-primary-light hover:underline"
                >
                  <span>Code</span>
                </a>
              )}
              <a 
                href={`/papers/${paper.slug}`}
                class="inline-flex items-center text-primary-light hover:underline"
              >
                <span>Read More</span>
              </a>
            </div>
          </div>
        ))}
      </div>
      <div class="text-center mt-12">
        <a href="/papers" class="inline-block bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-primary-dark transition-colors">
          View All Publications
        </a>
      </div>
    </div>
  </section>
</MainLayout> 